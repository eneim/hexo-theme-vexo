@import "_config"

body
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", 'Avenir', Helvetica, Arial, sans-serif
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  position: relative
  height: 100%
  margin: 0
  color: color-dark

ol, ul, form, p
  margin: 0

a
  text-decoration: none
  color: color-primary
  cursor: pointer

pre
  overflow-x: auto

.app-body
  padding: 1em
  margin: 0 auto
  height: 100%
  max-width: 750px
  position: relative
  opacity: 0
  transform: translateY(-20px)
  transition: all 0.4s

.hljs
  background: none !important

.tags
  margin: 15px 0
  span
    &:first-child
      font-size: .8em
      font-weight: 600

.tag-code
  font-family: 'Roboto Mono', Monaco, courier, monospace
  font-size: 0.8em
  background-color: color-background
  color: #bf616a
  padding: 3px 5px
  margin: 0 2px
  border-radius: 2px
  white-space: nowrap

.article-card
  padding-bottom: 20px
  &:first-child
    margin-top: 80px

h2.article-head
  font-size: 1.5em
  margin-bottom: 0

.article-head > a
  color: color-dark
  &:hover
    border-bottom: 2px solid color-primary

.article-date
  color: color-gray
  font-size: 12px
  margin: 10px 0

.article-summary
  margin: 20px 0
  color: color-dark

.more
  font-size: 14px
  font-weight: 600

#article-banner
  width: 100%
  box-sizing: border-box
  top: 0
  left: 0
  padding: 80px 20px 25px 20px
  text-align: center
  position: relative
  @media m-mobile
    padding: 80px 10px 25px 10px
  h2
    margin: .4em 0
    font-size: 40px
    color: color-white
    text-shadow: 0 0 40px color-dark
    opacity: 0
    transform: translateY(-20px)
    transition: all 0.4s
    @media m-mobile
      font-size: 30px
  .post-date
    font-size: 14px
    margin: 10px 0 20px 0
    color: color-white
    opacity: 0
    transform: translateY(-20px)
    transition: all 0.4s
    transition-delay: 0.05s
  .arrow-down
    display: flex
    width: 100%
    justify-content: center
    opacity: 0
    transform: translateY(-20px)
    transition: all 0.4s
    transition-delay: 0.1s
    a
      z-index: 4
      display: block
      width: 25px
      height: 25px
      -webkit-transform: rotate(315deg)
      transform: rotate(315deg)
      -webkit-animation-name: shine
      -webkit-animation-duration: 1.5s
      -webkit-animation-iteration-count: infinite
      animation-iteration-count: infinite
      border-bottom: 1px solid color-white
      border-left: 1px solid color-white

.post-article
  margin-top: 20px
  @media m-mobile
    margin-top: 0

.money-like
  padding: 2rem 0 3rem
  .reward-btn
    cursor: pointer
    font-size: 1.6rem
    line-height: 3.2rem
    position: relative
    display: block
    width: 3.2rem
    height: 3.2rem
    margin: 0 auto
    padding: 0
    text-align: center
    vertical-align: middle
    color: color-white
    border: 1px solid #f1b60e
    border-radius: 50%
    background: linear-gradient(to bottom, #fccd60 0, #fbae12 100%, #2989d8 100%, #207cca 100%)
  .money-code
    position: absolute
    top: -10rem
    left: 50%
    display: none
    width: 16rem
    height: 8rem
    margin-left: -9rem
    padding: 10px 15px
    border: 1px solid color-border
    background: color-white
    box-shadow: 0 1px 1px 1px color-border
    border-radius: 4px
    span
      display: inline-block
      width: 7rem
      height: 10rem
    .alipay-code
      float: left
      .code-image
        background-image: url(alipay-url)
        background-size: contain
        width: 7rem
        height: 7rem
    .wechat-code
      float: right
      .code-image
        background-image: url(wechat-url)
        background-size: contain
        width: 7rem
        height: 7rem
    b
      font-size: 12px
      line-height: 24px
      display: block
      margin: 0
      text-align: center
      color: color-dark
    img
      display: inline-block
      float: left
      width: 7rem
      width: 7rem
      margin: 0 auto
      border: 0

.notice
  font-size: 12px
  display: block
  margin-top: 10px
  text-align: center
  color: color-gray
  font-style: italic

.qrcode
  padding-bottom: 30px
  text-align: center
  border-bottom: 1px dashed color-border
  canvas
    width: 8rem
    height: 8rem
    padding: 5px
    box-shadow: 0 0 1px color-shadow

.scroll-top
  cursor: pointer
  opacity: 0
  position: fixed
  box-sizing: border-box
  right: 2em
  bottom: 45px
  width: 40px
  height: 40px
  padding: 5px
  background-color: color-primary
  border-radius: 20px
  transition: opacity .5s ease

.arrow-icon
  background-image: url(arrow-url)
  width: 30px
  height: 30px
  display: block
  background-size: contain

.opacity
  opacity: 1

@keyframes shine
  0%, 100%
    opacity: .1
  25%, 75%
    opacity: .2
  50%
    opacity: 1

@import "_partial/header"
@import "_partial/footer"
@import "_partial/pager"
@import "_partial/markdown"
@import "_partial/tags"
@import "_partial/archive"
<div id="article-banner">
  <h2>Tags</h2>
  <p class="post-date">---</p>
</div>
<main class="app-body">
  <div id="tag-cloud">
    <% site.tags.map(function(tag, index) { %>
      <a href="<%- url_for('tags/' + tag.name) %>" class="tag<%= Math.round(Math.random() * 3) %>" data-name="tag-<%= index %>">
        <%= tag.name %>
      </a>
    <% }) %>
  </div>
  <% site.tags.map(function(tag, index){ %>
    <div class="tag-list">
      <h3 class="tag-name" id="tag-<%= index %>"><%= tag.name %></h3>
      <% tag.posts.map(function(post) { %>
        <ul class="tag-preview">
          <li>
            <a href="<%- config.root %><%- post.path %>"><%- post.title || "Untitled" %></a>
          </li>
        </ul>
      <% }) %>
    </div>
    <% }) %>
</main>

<script>
  (function () {
    var url = '<%= config.url %>/<%= page.path %>';
    $('#article-banner').geopattern(url);
    $('.header').removeClass('fixed-header')
  })();
</script>